<div class="container">
  <div class="row mt-3">
    <% for (let i = 0; i < accounts.length; i++) { %>
    <div class="col-md-4 col-lg-4 col-sm-12 d-flex align-items-stretch pb-2 px-4 mb-3">
      <div class="card">
        <img src="<%= accounts[i].logo %>" class="card-img-top" >
        <div class="card-body">
          <h5 class="card-title"><%= accounts[i].name %></h5>
          <p class="card-text"><%= accounts[i].description %></p>
          <a href="#" class="btn btn-primary">Invest</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
